<% layout("/layouts/boilerplate") %>

  <div class="row mt-4">
    <div class="col-12 col-md-8 offset-md-2">

      <h3><b><%= listing.title %></b></h3><br>
    </div>
  </div>

  <div class="row">
    <div class="card col-12 col-md-8 offset-md-2 show-card listing-card">
       <i>Posted by: <b><%= listing.owner.username %></b></i>
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
<br>
      <div class="card-body">
        <p class="card-text">
         
          <%= listing.description %><br>
          &#8377;<b><%= listing.price.toLocaleString('en-IN') %></b><br>
          <%= listing.location %><br>
      
          <%= listing.country %>
        </p>
      </div>
    </div>
  </div>
 
  <!-- BUTTONS -->
   <%if(currUser && currUser._id.equals(listing.owner._id)) { %>
  <div class="row">
   <div class="card col-12 col-md-8 offset-md-2 show-card listing-card">

    
      <div class="btns">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark add-btn">
          Edit
        </a>

        <form class="ms-md-3 mt-2 mt-md-0" method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-dark" >
            Delete
          </button>
        </form>
      </div>
    
    </div>
  </div>
 <%} %>

  <!-- review -->
  <div class="mb-3 col-12 col-md-8 offset-md-2">

         <%if(currUser){%>
    <hr>

    <h4>Leave a review</h4>
  
    <div class="review-box">

 
    <form action="/listings/<%=listing.id%>/reviews" method="POST" novalidate class="needs-validation">
      <!-- starsss -->


      <fieldset class="starability-heartbeat">
  <legend>Rating</legend>
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>





      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
        <div class="invalid-feedback">Please add some comment for review</div>
      </div>

      <button class="btn btn-outline-dark">Submit</button>

    </form>


    </div>
<%}%>

    <hr>
<%if(listing.reviews.length>0){%>
  <p><b>All Reviews</b></p>
  
  <div class="row">
  <% for (review of listing.reviews) { %>
<div class="card col-12 col-md-5 ms-md-3 mb-3 pb-2 pt-2 review-box">

    <div class="card-body">
      <h5 class="card-title"><%=review.author.username%></h5>
 <p class="starability-result" data-rating="<%=review.rating%>">
    Rated: <%=review.rating%> stars</p>
  <p class="card-text"><%= review.comment %></p>

    </div>
    <form class="mb-2 mt-2" method="POST" action="/listings/<%=listing._id%>/reviews/<%=review._id%>?_method=DELETE">
      <button class="btn btn-sm btn-dark">Delete</button>
    </form>

  </div>
<% } %>
</div>
<%}%>
 
 </div>
  <!-- mapp thing -->
<% if (listing.geometry && listing.geometry.coordinates) { %>


<h4 class="mt-4 col-12 col-md-8 offset-md-2">Location</h4>

<div class="col-12 col-md-8 offset-md-2 mb-4">

<div class="map-wrapper">
  <div
    id="map"
    style=" border-radius:10px;"
    data-lng="<%= listing.geometry.coordinates[0] %>"
    data-lat="<%= listing.geometry.coordinates[1] %>"
    data-title="<%= listing.title %>"
    data-price="<%= listing.price %>"
    data-key="<%= maptilerKey %>"
  ></div>

  <button
    id="recenter-btn"
    class="btn btn-outline-dark recenter-btn"
  >
    <b>‚ü≥</b>
  </button>
</div>

</div>

<% } %>


